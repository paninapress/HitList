<!DOCTYPE html>
<html>
<head>
  <title>HitList</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'angular-resource' %>
  <%= javascript_include_tag 'angular-route' %>
    <%= javascript_include_tag 'angular-devise' %>
  <%= csrf_meta_tags %>
  <base href="/">
</head>
<body ng-app='HitListRoute'>

	 <div class="container">
    	<nav class="navbar navbar-default navbar-fixed-top" role="navigation">
        <ul class="nav nav-pills pull-left">
          <li data-no-turbolink><a href="/"><h4>HitList</h4><p>Version 1.0</p></a></li>
        </ul>

        <ul class="nav nav-pills pull-right" ng-controller="sessionCtrl as session">
            <li ng-hide="isAuthenticated"><%= link_to('Login', new_user_session_path)  %></li>
          <li ng-show="isAuthenticated"><a href="#" ng-click="session.logout()">Logout</a></li>
        </ul>
      </nav>
    </div>

	<div class="main-content container">
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <div ng-view></div>
	</div>

</body>
</html>