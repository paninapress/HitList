<!DOCTYPE html>
<html>
<head>
  <title>HitList</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'angular-resource' %>
  <%= csrf_meta_tags %>
</head>
<body ng-app="DashboardApp" ng-controller='DashboardCtrl'>

	<div class="container">
    	<nav class="navbar navbar-default navbar-fixed-top" role="navigation">
        <ul class="nav nav-pills pull-left">
          <li><a href="/"><h4>HitList</h4><p>Version 1.0</p></a></li>
        </ul>
        <ul class="nav nav-pills pull-right">
            <li ng-click="nowDisplaying('stars-view')" class="list-view hide"><a>Stars</a></li>
            <li ng-click="nowDisplaying('list-view')" class="stars-view"><a>Friends</a></li>
            <% if user_signed_in? %>
              <li><%= link_to('Logout', destroy_user_session_path, method: :delete)  %></li>
            <% else %>
              <li><%= link_to('Login', new_user_session_path)  %></li>
            <% end %>
        </ul>
      </nav>
  	</div>

	<div class="main-content container">
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>
	</div>

</body>
</html>